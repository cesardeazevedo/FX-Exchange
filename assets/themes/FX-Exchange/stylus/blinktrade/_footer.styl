.footer
    position relative
    margin auto
    margin-top 120px
    bottom 0px
    color #333
    text-align center
    font-size 14px
    width 100%
    background-color white
    padding-top 20px
    padding-bottom 20px


    a
        color primary-color

    table
        width 100%
        tr
            td
                width auto
                padding-left 5px
                padding-right 5px
                .footerItem
                    background-color white
                    min-height 55px
                    border-radius 5px
                    line-height 50px
                    transition background-color .2s 

                    &:hover
                        background-color #eee

