.menu
    background-color rgba(0,0,0,0.4)
    font-size 12px
    text-transform uppercase
    width 100%
    height 50px
    border-top-left-radius 5px
    border-top-right-radius 5px

    li
        border-bottom 3px solid #eee
        &:hover
            border-bottom 3px solid primary-color

        a
            color white
            transition all .2s
            &:hover
                color primary-color
