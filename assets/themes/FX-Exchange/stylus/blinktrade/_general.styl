.frontpage
    position fixed
    z-index -999
    width 200%
    height 200%
    left -50%

    img
        display block
        min-width 50%
        min-height 50%
        margin auto
        margin-top -200px
        top 0
        left 0
        right 0
        bottom 0

.page
    background-color #f5f5f5
    border-radius 4px
    padding 20px
    margin-top 120px

    .page-header
        margin-top 10px

    p
        font-size 14px

.thin-100
    font-weight 100

.thin-200
    font-weight 200

.thin-300
    font-weight 300


label
    font-weight 400

.bitex-view-title
    text-transform uppercase

select
    max-width 50%
