.account-header
    display flex
    justify-content space-between
    align-items center
    margin-top 120px

    #account_balance
        width 300px
        text-align right

        #id_account_summary_content
            background-color rgba(0,0,0,0.4)
            border-radius 4px
            display inline-block
            padding 10px
            width 100%
            color white
            max-height 150px
            overflow-y auto

            h6
                text-transform uppercase

            table
                tr
                    height 35px
            strong
                color primary-color

            a
                padding 5px
                background-color rgba(0,0,0,0.4)
                border-radius 4px
                color white
                transition all .2s

                &:hover
                    background-color white
                    color primary-color
                    cursor pointer

